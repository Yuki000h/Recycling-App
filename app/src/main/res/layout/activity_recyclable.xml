<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".RecyclableActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="40dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recyclable Waste"
            android:textSize="30dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/plasticbttl_card"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:onClick="onCardViewClicked">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D9D6C1"
                android:padding="10dp">

                <TextView
                    android:layout_width="196dp"
                    android:layout_height="67dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Plastic Bottles and Containers"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/plasticbottlesandcontainers_icon"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/metalcans_card"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D9D6C1"
                android:padding="10dp">

                <TextView
                    android:layout_width="263dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="26dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Metal Cans"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/metalcans_icon"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/paper_card"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D9D6C1"
                android:padding="10dp">

                <TextView
                    android:layout_width="263dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="26dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Paper"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/paper_icon"
                    android:layout_alignParentRight="true"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/glassjars_card"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="20dp"

            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D9D6C1"
                android:padding="10dp">

                <TextView
                    android:layout_width="240dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Glass Bottles and Jars"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="150dp"
                    android:src="@drawable/glassbottlesandjars_icon" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/papercardboard_card"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            app:cardCornerRadius="20dp"

            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D9D6C1"
                android:padding="10dp">

                <TextView
                    android:layout_width="263dp"
                    android:layout_height="74dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="26dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Paper Cardboard"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:maxHeight="150dp"
                    android:src="@drawable/papercardboard_icon"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
</ScrollView>